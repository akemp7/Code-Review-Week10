@using Tracking.Models;

<h1>Here are the vendors currently in your list:</h1>
@if (Model.Count == 0)
{
  <p>There are no vendors for you to see!</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li>@vendor.Description, @vendor.Id</li>
    <li>@vendor.VendorName</li>
  }
</ul>

<form action="/vendors/{id}">
  <label for="vendorID">Search a vendor by their ID:</label>
  <input id="vendorID" name="vendorID" type="text">
  <button type="submit">Submit</button>
</form>

<form action="/vendors/itemDelete" method="post">
  <label for="vendorID">Delete a vendor by ID:</label>
  <input id="vendorID" name="vendorID" type="text">
  <button type="submit">Submit</button>
</form>


<a href="/vendors/new">Add a new item.</a>

