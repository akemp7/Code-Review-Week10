@using Tracking.Models;

<h1>Here are the vendors currently in your list:</h1>
@if (Model.Count == 0)
{
  <p>There are no vendors for you to see!</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li>@vendor.VendorName, @vendor.Id</li>
  }
</ul>

<form action="/vendors/{id}">
  <label for="vendorsID">Search a vendor by their ID for more information:</label>
  <input id="vendorsID" name="vendorsID" type="text">
  <button type="submit">Submit</button>
</form>

<form action="/vendors/itemDelete" method="post">
  <label for="vendorsID">Delete a vendor by ID:</label>
  <input id="vendorsID" name="vendorsID" type="text">
  <button type="submit">Submit</button>
</form>


<a href = "/">Back to the homepage- add a new vendor.</a>

